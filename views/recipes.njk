{% extends "layout.njk" %}

{% block header %}
    <link rel="stylesheet" href="/recipes.css">
{% endblock %}
    
    {% block content %}
        <main>
            <section class="cards">
                
                {% for card in data %}
                    <div class="card">
                        <div class="card-image-container">
                            <img src="{{card.image}}" alt="{{card.title}}">
                        </div>
                        <div class="card-info">
                            <p>{{card.title}}</p>
                        </div>
                        <div class="creator">
                            <p>{{card.author}}</p>
                        </div>
                        <div id="{{card.index}}" class="index"></div>
                    </div>
                {% endfor %}
            
            </section>
        </main>

        <script src="/scripts.js"></script>
    {% endblock %}


