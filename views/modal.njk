{% extends "layout.njk" %}

{% block header %}
    <link rel="stylesheet" href="/modal.css">
{% endblock %}

{% block content %}
    <img src="{{data.image}}" alt="{{data.title}}">
    <div class="titleContent">
        <h1>{{data.title}}</h1>
        <p>por {{data.author}}</p>
    </div>

    <div class="container ingredients">
        <div class="subTitleContent">
            <h2>Ingredientes</h2>
            <p class="btn ingredients">MOSTRAR</p>
        </div>
    
        <div class="list ingredients">
            <ul>
                {% for item in data.ingredients%}
                    <li>{{item}}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
    

    
    <div class="container preparation">
        <div class="subTitleContent">
            <h2>Modo de preparo</h2>
            <p class="btn preparation">MOSTRAR</p>
        </div>
        
        <div class="list preparation">
            <ul>
                {% for item in data.preparation%}
                    <li>{{item}}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
    
    <div class="container info">
        <div class="subTitleContent">
            <h2>Informações adicionais</h2>
            <p class="btn info">MOSTRAR</p>
        </div>
        
        <div class="list info">
            <p>{{data.information}}</p>
        </div>
    </div>
    

    <script src="/modal.js"></script>

{% endblock %}